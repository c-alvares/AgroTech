// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id Int @id @default(autoincrement())
  name String
  password String
  management Boolean @default(false)
}

model Drivers {
  id Int @id @default(autoincrement())
  name String
  licence String @unique
  availability Boolean @default(true)
}

model Fleet {
  id Int @id @default(autoincrement())
  type String
  plate String
  availability Boolean @default(true)
  maintenance Maintenance[]
}

model Maintenance {
  id Int @id @default(autoincrement())
  checkin DateTime @default(now())
  checkout DateTime?
  description String
  vehicle_id Int
  vehicle Fleet @relation(fields: [vehicle_id], references: [id], onDelete: Cascade) 
}
// ? indica que o campo é opcional, não havendo necessidade de passá-lo ao cadastrar.